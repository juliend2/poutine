<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="generator" content="poutine" />
<title>$title</title>

</head>
<body>
<h1>$subtitle</h1>
<a href="/?action=add">New Question</a>
<ul>
#for $question in $questions: 
	<li><a href="/?action=delete&id=${question.id}">Delete</a> |
	<a href="/?action=add_answer&id=${question.id}">New Answer</a>
	
	${question.question}
	
	#if question.answers:
		<ul>
			#for $answer in question.answers:
				<li class="answer">
				<a href="/?action=deleteanswer&id=${answer.id}">Delete</a>
				#if answer.answer_link:
					<a href="${answer.answer_link}" class="answer_link" target="_blank">${answer.answer_link}</a>
				#end if
				<div class="answer_text">
					${answer.answer_text}
				</div>
				</li>
			#end for
		</ul>
	#end if
	<form action="/?action=addanswer&id=${question.id}" method="post" accept-charset="utf-8">
		<p>
			<label for="link">link</label>
			<input type="text" name="link" value="" id="link"/>
		</p>
		<p>
			<label for="text">text</label>
			<textarea name="text"></textarea>
		</p>
		<p>
			<input type="hidden" name="question_id" value="${question.id}" id="question_id"/>
			<input type="submit" value="Add"/>
		</p>
	</form>
	</li> 
#end for
</ul>
